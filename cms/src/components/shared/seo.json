{
  "collectionName": "components_shared_seos",
  "info": {
    "displayName": "SEO",
    "description": "SEO metadata",
    "icon": "search"
  },
  "options": {},
  "attributes": {
    "metaTitle": {
      "type": "string",
      "required": true,
      "maxLength": 60
    },
    "metaDescription": {
      "type": "text",
      "required": true,
      "maxLength": 160
    },
    "keywords": {
      "type": "json",
      "required": true,
      "default": []
    },
    "metaRobots": {
      "type": "string",
      "default": "index, follow",
      "regex": "^(index|noindex), (follow|nofollow)$"
    },
    "structuredData": {
      "type": "json",
      "required": false
    },
    "canonicalURL": {
      "type": "string",
      "regex": "^https?://[^\\s/$.?#].[^\\s]*$"
    }
  }
} 